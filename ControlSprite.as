package {	import flash.display.Sprite;		public class ControlSprite extends Sprite {		public static const TYPE_MAIN_BOTTOM_LEFT:int = 0;		public static const TYPE_MAIN_BOTTOM_RIGHT:int = 1;				private var _ctrl_width;		private var _ctrl_height_small		private var _ctrl_height_big		private var _ctrl_d		private var _type;		public var _ctrl:Sprite		public function ControlSprite(xx:Number, yy:Number, d:Number, type:int) {			var circle:Sprite = new Sprite();			circle.graphics.beginFill(0xFFFFFF);			circle.graphics.drawCircle(0, 0, 3);			circle.graphics.endFill();			_type = type;			_ctrl_width = d;			_ctrl_height_small = d/10			_ctrl_height_big = d/8			_ctrl_d = _ctrl_height_big*.9			if (_type == Control.TYPE_MAIN_BOTTOM_RIGHT) {				x = xx-_ctrl_d;				y = yy+_ctrl_d;			} else {				x = xx+_ctrl_d;				y = yy+_ctrl_d;			}			_ctrl = new Sprite();			_ctrl.graphics.beginFill(0x000000,1);			_ctrl.graphics.moveTo(-(_ctrl_height_big/2), -(_ctrl_height_big/2));			_ctrl.graphics.lineTo(-(_ctrl_height_big/2) + _ctrl_width, -(_ctrl_height_big/2) + (_ctrl_height_big - _ctrl_height_small)*0.5);			_ctrl.graphics.lineTo(-(_ctrl_height_big/2) + _ctrl_width, -(_ctrl_height_big/2) + _ctrl_height_big - (_ctrl_height_big - _ctrl_height_small)*0.5);			_ctrl.graphics.lineTo(-(_ctrl_height_big/2), -(_ctrl_height_big/2) + _ctrl_height_big);			_ctrl.graphics.endFill();			addChild(_ctrl);			addChild(circle);		}	}}